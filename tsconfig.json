{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./lib",
    "target": "es5",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test"
  ]
}
